<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/banner"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <Button
        android:id="@+id/ver_lista"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="174dp"
        android:onClick="verLista"
        android:text="@string/ver_lista"

        />

    <Button
        android:id="@+id/boton_nuevo"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="244dp"
        android:onClick="ingresarNuevo"
        android:text="Ingresar Nuevo Producto" />

    <Button
        android:id="@+id/boton_eliminar"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="315dp"
        android:onClick="eliminarProducto"
        android:text="Eliminar Comprados" />

</RelativeLayout>
